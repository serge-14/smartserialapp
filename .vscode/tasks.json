{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "test current file",
            "suppressTaskName": true,
            "args": ["run", "--silent", "test:file", "${file}"],
            "isTestCommand": true
        },
        {
            "taskName": "test",
            "args": ["run", "--silent", "test"]
        }
    ]
}